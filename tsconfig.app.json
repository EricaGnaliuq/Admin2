{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "target": "es5",
      "module": "es2020",
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts"]
  }
  